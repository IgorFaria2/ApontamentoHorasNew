    .sidenav {
      height: auto;
      padding: 15px;
    }

    .row.content {
      height: auto;
    }
  }
</style>
<script>
  function validateTimes() {
    var time1 = document.getElementById("HORA_INICIO").value;
    var time2 = document.getElementById("HORA_FIM").value;
    if (time2 <= time1) {
      alert("O Horario final esta menor que a inicial");
      return false;
    }
    return true;
  }
</script>

