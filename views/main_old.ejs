              <%for(let i=0;i < listaatividades.length; i++){%>
                <option>
                  <%=listaatividades[i]%>
                </option>
                <%}%>
            </select><br>
            <label>PIC</label><br>
            <select required name="PIC" class="tamanho">
              <option></option>
              <%for(let i=0;i < listaprojetos.length; i++){%>
                <option>
                  <%=listaprojetos[i].PIC%>
                    <%=listaprojetos[i].NOME%>
                </option>
                <%}%>
            </select><br>

            <label>Dia</label><br>
            <input required type="date" name="DIA" class="tamanho"><br>
            <label>Hora Inicio</label><br>
            <input required type="time" name="HORA_INICIO" id="HORA_INICIO" class="tamanho"><br>
            <label>Hora fim</label><br>
            <input required type="time" name="HORA_FIM" id="HORA_FIM" class="tamanho"><br>
            <br><input onclick="return validateTimes()" type="submit">
          </form>
