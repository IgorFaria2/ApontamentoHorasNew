      <div >
        <div style="text-align: center;">
          <div class="blocos">
            <form method="post" action="/atividade" style="display: none;">
              <label>Atividade</label><br>
              <input required name="ATIVIDADE"></input><br>
              <label>Descrição</label><br>
              <input name="DESCRICAO"></input><br>
