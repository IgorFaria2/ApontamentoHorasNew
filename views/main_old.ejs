              <option></option>
              <%for(let i=0;i < listanomes.length; i++){%>
                <option>
                  <%=listanomes[i]%>
                </option>
                <%}%>
            </select><br>
            <label>Atividade</label><br>
            <select required name="ATIVIDADE" class="tamanho">
